@inherits LayoutComponentBase

<PageTitle>@ApplicationName</PageTitle>

<MudThemeProvider Theme="@_selectedTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<AuthorizeView>
    <NotAuthorized>
        <MudLayout>
            <MudAppBar Dense="true" Elevation="1">
                <MudSpacer/>
                <MudText Typo="Typo.h5" Class="ml-3">@ApplicationName</MudText>
                <MudSpacer/>
                <MudMenu Icon="@Icons.Filled.Settings" Color="Color.Inherit" Dense="true" Direction="Direction.Left">
                    @foreach (var theme in GetAvailableThemes())
                    {
                        <div class="px-2">
                            <MudTooltip Arrow="true" Placement="Placement.Left" Text="@theme.Description">
                                <MudButton Variant="Variant.Text" Color="Color.Primary" StartIcon="@theme.Icon"
                                           OnClick="@((e) => ChangeTheme(theme))">
                                    @theme.FriendlyName
                                </MudButton>
                            </MudTooltip>
                        </div>
                    }
                </MudMenu>
            </MudAppBar>
            <MudMainContent>
                <MudContainer MaxWidth="MaxWidth.Medium">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </NotAuthorized>
    <Authorized>
        <MudLayout>
            <MudAppBar Dense="true" Elevation="1">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                               OnClick="@((e) => DrawerToggle())"/>
                <MudSpacer/>
                <MudText Typo="Typo.h5" Class="ml-3">@ApplicationName</MudText>
                <MudSpacer/>
                <MudMenu Icon="@Icons.Filled.Settings" Color="Color.Inherit" Dense="true" Direction="Direction.Left">
                    @foreach (var theme in GetAvailableThemes())
                    {
                        <div class="px-2">
                            <MudTooltip Arrow="true" Placement="Placement.Left" Text="@theme.Description">
                                <MudButton Variant="Variant.Text" Color="Color.Primary" StartIcon="@theme.Icon"
                                           OnClick="@((e) => ChangeTheme(theme))">
                                    @theme.FriendlyName
                                </MudButton>
                            </MudTooltip>
                        </div>
                    }
                </MudMenu>
            </MudAppBar>
            <MudDrawer @bind-Open="_isDrawerOpen" ClipMode="DrawerClipMode.Always"
                       Elevation="2" Variant="DrawerVariant.Mini" OpenMiniOnHover="false">
                <NavMenu DisplayTooltips="@(!_isDrawerOpen)"/>
            </MudDrawer>
            <MudMainContent>
                <MudContainer MaxWidth="MaxWidth.Medium">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
</AuthorizeView>
