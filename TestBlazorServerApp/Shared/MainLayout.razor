@using System.Security.Claims
@using Domain.Models.Identity
@using TestBlazorServerApp.Settings
@inherits LayoutComponentBase

<PageTitle>@ApplicationName</PageTitle>

<MudThemeProvider Theme="@_selectedTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<AuthorizeView>
    <NotAuthorized>
        <MudLayout>
            <MudAppBar Dense="true" Elevation="1">
                <MudSpacer/>
                <MudText Typo="Typo.h5" Class="ml-3">@ApplicationName</MudText>
                <MudSpacer/>
            </MudAppBar>
            <MudMainContent>
                <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </NotAuthorized>
    <Authorized>
        <MudLayout>
            <MudAppBar Dense="true" Elevation="1">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                               OnClick="@((e) => DrawerToggle())"/>
                <MudSpacer/>
                <MudText Typo="Typo.h5" Class="ml-3">@ApplicationName</MudText>
                <MudSpacer/>
                <MudButton OnClick="((e) => SettingsToggle())">
                    <MudAvatar Color="Color.Warning" Variant="Variant.Outlined" Image="">
                        @CurrentUser.Identity?.Name[0]
                    </MudAvatar>
                </MudButton>
            </MudAppBar>
            <MudDrawer @bind-Open="_userPreferences.DrawerDefaultOpen" ClipMode="DrawerClipMode.Always" Elevation="2"
                       Variant="DrawerVariant.Mini" OpenMiniOnHover="false" Anchor="Anchor.Left">
                <NavMenu/>
            </MudDrawer>
            <MudDrawer @bind-Open="_settingsDrawerOpen" ClipMode="DrawerClipMode.Docked" Elevation="2" Variant="DrawerVariant.Temporary"
                       OpenMiniOnHover="false" Anchor="Anchor.Right">
                <CascadingValue TValue="AppUserPreferenceFull" Name="_userPreferences" Value="_userPreferences">
                    <CascadingValue TValue="AppTheme" Name="_selectedTheme" Value="_selectedTheme">
                        <CascadingValue TValue="ClaimsPrincipal" Name="CurrentUser" Value="CurrentUser">
                            <CascadingValue TValue="List<AppTheme>" Name="_availableThemes" Value="_availableThemes">
                                <SettingsMenu/>
                            </CascadingValue>
                        </CascadingValue>
                    </CascadingValue>
                </CascadingValue>
            </MudDrawer>
            <MudMainContent>
                <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
</AuthorizeView>
