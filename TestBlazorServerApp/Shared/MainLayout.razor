@using System.Security.Claims
@inherits LayoutComponentBase

<PageTitle>@ApplicationName</PageTitle>

<MudThemeProvider Theme="@_selectedTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<AuthorizeView>
    <NotAuthorized>
        <MudLayout>
            <MudAppBar Dense="true" Elevation="1">
                <MudSpacer/>
                <MudText Typo="Typo.h5" Class="ml-3">@ApplicationName</MudText>
                <MudSpacer/>
            </MudAppBar>
            <MudMainContent>
                <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </NotAuthorized>
    <Authorized>
        <MudLayout>
            <MudAppBar Dense="true" Elevation="1">
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                               OnClick="@((e) => DrawerToggle())"/>
                <MudSpacer/>
                <MudText Typo="Typo.h5" Class="ml-3">@ApplicationName</MudText>
                <MudSpacer/>
                <MudButton OnClick="((e) => SettingsToggle())">
                    <MudAvatar Color="Color.Warning" Variant="Variant.Outlined" Image="">
                        @CurrentUser.Identity?.Name[0]
                    </MudAvatar>
                </MudButton>
            </MudAppBar>
            <MudDrawer @bind-Open="_userPreferences.DrawerDefaultOpen" ClipMode="DrawerClipMode.Always"
                       Elevation="2" Variant="DrawerVariant.Mini" OpenMiniOnHover="false" Anchor="Anchor.Left">
                <CascadingValue TValue="ClaimsPrincipal" Name="CurrentUser" Value="CurrentUser">
                    <CascadingValue TValue="string" Name="ApplicationName" Value="ApplicationName">
                        <NavMenu/>
                    </CascadingValue>
                </CascadingValue>
            </MudDrawer>
            <MudDrawer @bind-Open="_settingsDrawerOpen" ClipMode="DrawerClipMode.Never"
                       Elevation="2" Variant="DrawerVariant.Temporary" OpenMiniOnHover="false" Anchor="Anchor.Right">
                @foreach (var theme in _availableThemes)
                {
                    <div class="px-2">
                        <MudTooltip Arrow="true" Placement="Placement.Left" Text="@theme.Description">
                            <MudButton Variant="Variant.Text" Color="Color.Primary" StartIcon="@theme.Icon"
                                       OnClick="@((e) => ChangeTheme(theme))">
                                @theme.FriendlyName
                            </MudButton>
                        </MudTooltip>
                    </div>
                }
            </MudDrawer>
            <MudMainContent>
                <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
</AuthorizeView>
